{{#each beers}}
    <div class="beer-card">
        <img src="{{image_url}}" alt="{{name}}">
        <section>
            <div class="beer-title">
            <h3>{{name}}</h3>
            <p>{{tagline}}</p>
            </div>
            <p>{{description}}</p>
            {{#if random}}
                <strong>Food Pairing:</strong>
                <ul>
                    {{#each food_pairing}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p><strong>Brewer's Tips:</strong> {{brewers_tips}}</p>
            {{/if}}
        </section>
    </div>
{{/each}}
